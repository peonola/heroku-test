doctype html 
html

    head
        title=data.name

    body 
        form(action=`/update/${data.id}` method="POST")
            input(
            type="text"
            value=`${data.name}`
            name="name"
            )
            input(
            type="text"
            value=`${data.message}`
            name="message"
            )
            input(type= 'submit' value='Submit')
            
        a(href="/") Home