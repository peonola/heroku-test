doctype html 
html
    head
        title Home page
        
    body 
        h1 Your entries: 
        - var n=0;
        table  
            tr 
                th #
                th Name 
                th Message
                th Option
             
                for data in item
                    - n++
                    tr
                        td= a=data.id
                        td 
                            a(href=`/${data.id}`)=data.name 
                        td
                            a=data.message
                        td
                            a(href=`/update/${data.id}`) Update
                            a(href=`/delete/${data.id}`) Delete
    br
    a(href="/create") Create note  